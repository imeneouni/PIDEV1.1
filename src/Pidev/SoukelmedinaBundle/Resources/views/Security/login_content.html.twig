
{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}


{% block body %}
    <!-- Registration page -->
    <div class="page-registration section-padding">
        <div class="container">
            <div class="row">
                <div class="col-md-4">

                </div>
                <div class="col-md-4">
                    <div class="sign-in-area">
                        <h3>Sign in</h3>
                        <!-- sign in form -->
                        <form action="{{ path("fos_user_security_check") }}" method="post">
                            {% if csrf_token %}
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                            {% endif %}
                            <div class="form-group">
                                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" id="login_user_name"  placeholder="User Or Email" />
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" placeholder="Password"  id="password" name="_password" required="required" id="login_password" />

                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <button class="theme-btn hvr-shutter-in-horizontal" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}">Sign in</button>
                                    </div>
                                    <div class="col-sm-4 no-padding">
                                        <span>
                                            <input type="checkbox"> remember me
                                        </span>
                                    </div>
                                    <div class="col-sm-4 no-padding">
                                        <a class="lfc_forget_pass" href="{{ path('fos_user_resetting_request') }}">Forgot Password ?</a>
                                    </div>
                                </div>
                            </div>
                        </form><!-- // End sign in form -->
                    </div>
                </div>
                <div class="col-md-4">

                </div>
            </div>
        </div>
    </div><!-- // End Registration page -->
    <!-- Social area -->
    <div class="social-area">
        <div class="container">
            <div class="row">
                <!-- Sibgle socila link -->
                <div class="col-md-3 no-padding">
                    <div class="single-social-link facebook">
                        <a href="#"><i class="fa fa-facebook" aria-hidden="true"></i><span>10k</span> likes</a>
                    </div>
                </div>
                <!-- Sibgle socila link -->
                <div class="col-md-3 no-padding">
                    <div class="single-social-link twitter">
                        <a href="#"><i class="fa fa-twitter" aria-hidden="true"></i><span>5k</span> tweets</a>
                    </div>
                </div>
                <!-- Sibgle socila link -->
                <div class="col-md-3 no-padding">
                    <div class="single-social-link google-plus">
                        <a href="#"><i class="fa fa-google-plus" aria-hidden="true"></i><span>3k</span> +1</a>
                    </div>
                </div>
                <!-- Sibgle socila link -->
                <div class="col-md-3 no-padding">
                    <div class="single-social-link pinterest">
                        <a href="#"><i class="fa fa-pinterest-p" aria-hidden="true"></i><span>4k</span> pin</a>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- // End Social area -->
    <!-- Main footer area -->
{% endblock body %}